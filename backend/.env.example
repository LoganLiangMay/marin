# Application Configuration
APP_NAME="Audio Call Data Ingestion Pipeline"
APP_VERSION="1.0.0"
DEBUG=False

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# S3 Buckets (from Story 1.3)
S3_BUCKET_AUDIO=audio-pipeline-dev-audio
S3_BUCKET_TRANSCRIPTS=audio-pipeline-dev-transcripts

# MongoDB (from Story 1.4)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=audio_pipeline

# Redis (from Story 1.5)
REDIS_ENDPOINT=your-redis-cluster.cache.amazonaws.com:6379
REDIS_PASSWORD=your-redis-password
REDIS_SSL=True

# SQS Queue (from Story 2.3)
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/audio-processing-queue

# External APIs
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key  # Optional, for Claude models in RAG

# OpenSearch Serverless (Epic 4, Story 4.1)
OPENSEARCH_ENDPOINT=your-collection-id.us-east-1.aoss.amazonaws.com
OPENSEARCH_INDEX_NAME=call-transcripts

# Text Chunking Configuration (Story 4.2)
CHUNK_SIZE=512
OVERLAP_PERCENTAGE=10
MIN_CHUNK_SIZE=100
MAX_CHUNK_SIZE=1000

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Celery Worker Configuration (Story 2.4, 3.2)
CELERY_CONCURRENCY=2
CELERY_MAX_TASKS_PER_CHILD=1000
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=1800
CELERY_BROKER_CONNECTION_RETRY_ON_STARTUP=true

# Authentication Configuration (Story 5.1)
# Set ENABLE_AUTH=True in production to enforce authentication
ENABLE_AUTH=False
COGNITO_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_APP_CLIENT_ID=your-app-client-id
COGNITO_JWKS_URI=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_XXXXXXXXX/.well-known/jwks.json
COGNITO_ISSUER=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_XXXXXXXXX
AUTH_ALGORITHMS=["RS256"]
